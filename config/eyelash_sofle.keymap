            >;
            display-name = "FOO_7"; sensor-bindings = <&scroll_encoder>;
        };

// NOTE:  FOO
//===========
        layer_8 {
            bindings = <
&none      &none              &none           &none           &none            &none                   &mmv MOVE_UP          &none            &none          &none        &none          &none            &none
&none      &bt BT_CLR         &bt BT_CLR_ALL  &trans          &trans           &trans                  &mmv MOVE_DOWN        &kp U_RDO        &kp U_PST      &kp U_CPY    &kp U_CUT      &kp U_UNDO       &none
&none      &out OUT_USB       &out OUT_BLE    &trans          &trans           &trans                  &mmv MOVE_LEFT        &kp LEFT         &kp DOWN       &kp UP       &kp RGHT       &kp CPSWRD       &none
&none      &sys_reset         &trans          &bootloader     &trans           &trans                  &mmv MOVE_RIGHT       &kp HOME         &kp PGDN       &kp PGUP     &kp END        &kp INS          &none
                                                                                                       &kp C_MUTE
            &none            &none           &trans          &kp N0            &trans                  &kp ENTER             &kp ENTER        &kp BSPC       &kp DEL      &none          &none
            >;
            display-name = "FOO_8"; sensor-bindings = <&scroll_encoder>;
        };

        layer_9 {
            bindings = <
&kp GRAVE   &kp F1           &kp F2          &kp F3           &kp F4           &kp F5                &kp UP_ARROW            &kp F6           &kp F7          &kp F8      &kp F9          &kp F10           &trans
&trans      &kp GRAVE        &mkp LCLK       &mkp MCLK        &mkp RCLK        &mkp MB4              &kp DOWN_ARROW          &kp PG_UP        &kp END         &kp UP      &kp HOME        &kp MINUS         &kp EQUAL
